<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include('../partials/head'); -%>
  <body>

    <%- include('../partials/menu'); -%>

    <main class="container-fluid mt-3">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2>Hi, <%= user %>!</h2>
        </div>
      </div>
      <div class="row my-2">
        <div class="col-md-12">
          <!-- Search form -->
          <form class="form-inline d-flex justify-content-center">
            <i class="fas fa-search" aria-hidden="true"></i>
            <input class="form-control form-control-sm ml-3 w-75 SearchBorderColor" type="text" placeholder="Search....." aria-label="Search">
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 mb-3">
          <!-- Post -->
          <div class="row my-3">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header">
                  <!-- Title -->
                  <h4 class="card-title"><%= Title %></h4>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <!-- Image -->
                    <img class="img-fluid" src="img/post.jpeg" alt="">
                  </div>
                  <div class="col-md-8">
                    <!-- Message -->
                    <p class="card-text"><%= Message %></p>
                  </div>
                </div>
                <div class="card-footer text-center">
                  <!-- Button -->
                  <a class="btn btn-info">POST</a>
                </div>
              </div>
            </div>
          </div>
          <!-- Post -->
          <div class="row my-3">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header">
                  <!-- Title -->
                  <h4 class="card-title">{{ title[1] }}</h4>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <!-- Image -->
                    <img class="img-fluid" src="img/post.jpeg" alt="">
                  </div>
                  <div class="col-md-8">
                    <!-- Message -->
                    <p class="card-text">{{ message[1] }}</p>
                  </div>
                </div>
                <div class="card-footer text-center">
                  <!-- Button -->
                  <a class="btn btn-info">POST</a>
                </div>
              </div>
            </div>
          </div>
          <!-- Post -->
          <div class="row my-3">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header">
                  <!-- Title -->
                  <h4 class="card-title">{{ title[2] }}</h4>
                </div>
                <div class="row">
                  <div class="col-md-4">
                    <!-- Image -->
                    <img class="img-fluid" src="img/post.jpeg" alt="">
                  </div>
                  <div class="col-md-8">
                    <!-- Message -->
                    <p class="card-text">{{ message[2] }}</p>
                  </div>
                </div>
                <div class="card-footer text-center">
                  <!-- Button -->
                  <a class="btn btn-info">POST</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>


    <%- include('../partials/footer'); -%>

    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.1/js/mdb.min.js"></script>
    <!-- My SCRIPTS -->


  </body>
</html>
