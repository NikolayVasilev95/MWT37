<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include('../partials/head'); -%>
  <body>

    <%- include('../partials/menu'); -%>

    <main class="container-fluid mt-3">
      <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
          <div class="col-lg-6 col-md-12">
            <div class="card">
              <!-- Card-header -->
              <div class="card-header blue-grey darken-4">
                <!-- Title -->
                <h4 class="card-title text-default">Make new post!</h4>
              </div>
              <!-- Card-body -->
              <div class="card-body PostBG">
                <form class="mx-5" action="/controllers/post-controller" method="POST" name="form">
                  <div class="md-form">
                    <input type="text" id="form-title" name="title" class="form-control">
                    <label for="form-title">Title*</label>
                  </div>
                  <div class="md-form">
                    <input type="text" id="form-name" name="name" class="form-control" placeholder="<%= user %>">
                    <label for="form-name">Your Name*</label>
                  </div>
                  <!--Message-->
                  <div class="md-form">
                    <i class="fas fa-pencil-alt prefix text-white"></i>
                    <textarea id="form10" class="md-textarea form-control" name="message" rows="3"></textarea>
                    <label for="form10">Your message*</label>
                  </div>
                  <div class="d-flex justify-content-center">
                    <input type="submit" name="submit" value="Submit" class="btn blue-grey darken-4 text-default">
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>


    <%- include('../partials/footer'); -%>

    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.1/js/mdb.min.js"></script>
    <!-- My SCRIPTS -->


  </body>
</html>
